			<version>2.6</version>
		</dependency>
	</dependencies>

	<properties>
		<org.springframework.version>3.0.5.RELEASE</org.springframework.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!--
		<jdbc.group>hsqldb</jdbc.group>
		<jdbc.artifact>hsqldb</jdbc.artifact>
		<jdbc.version>1.8.0.10</jdbc.version>
		-->
		<jdbc.group>mysql</jdbc.group>
		<jdbc.artifact>mysql-connector-java</jdbc.artifact>
		<jdbc.version>5.0.8</jdbc.version>
	</properties>

</project>